page {
  height: 100%;
}

.trace-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background-color: #F5F5F5;
}

.logo {
  width: 340px;
  height: 255px;
}

.text-screen {
  display: flex;
  margin-top: 12px;
  padding-left: 38px;
  width: 100%;
  font-family: SimSun;
  line-height: 16px;
  font-size: 16px;
  font-weight: 800;
}

.button-code {
  display: flex;
  margin-top: 18px;
  justify-content: center;
  align-items: center;
  width: 75%;
  height: 40px;
  background-color: #288df8;
  border-radius: 4px;
}

.image-code {
  width: 26px;
  height: 26px;
}

.code-text {
  font-family: SimSun;
  line-height: 16px;
  font-size: 16px;
  font-weight: 400;
  color: white;
}

.introduction {
  display: flex;
  margin-top: 18px;
  padding-left: 38px;
  width: 100%;
  font-family: SimSun;
  line-height: 16px;
  font-size: 16px;
  font-weight: 800;
}

.describe {
  display: flex;
  margin-top: 20px;
  color: #646464;
  padding-left: 38px;
  width: 100%;
  font-family: SimSun;
  line-height: 16px;
  font-size: 16px;
  font-weight: 600;
}

.image-bottom {
  margin-top: 32px;
  width: 280px;
  height: 210px;
}