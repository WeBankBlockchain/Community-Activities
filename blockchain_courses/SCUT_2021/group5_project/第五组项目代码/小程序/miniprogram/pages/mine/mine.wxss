page {
  height: 100%;
}

.mine-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #F5F5F5;
}

.white{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 170px;
  background-color: #FFFFFF;
}

.login-box {
  display: flex;
  width: 100%;
  height: 90px;
  align-items: center;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.info-pages {
  display: flex;
  width: 100%;
  height: 80px;
  justify-content: space-around;
  align-items: center;
}
.else{
  display: flex;
  width: 100%;
  height: 80px;
  justify-content: center;
  align-items: center;
}
.else-img{
  width: 226px;
  height: 70px;
}
.info {
  display: flex;
  flex-direction: column;
  width: 33%;
  height: 80%;
  justify-content: space-around;
  align-items: center;
}

.info-icon1 {
  width: 38px;
  height: 30px;
}

.info-icon2 {
  width: 30px;
  height: 30px;
}

.info-text {
  font-family: SimSun;
  font-size: 12px;
  line-height: 16px;
  font-weight: 500;
}

.line {
  width: 0px;
  height: 50px;
  background-color: #000000;
  border: 1px solid #000000;
}

.tool-pages {
  display: flex;
  width: 100%;
  height: 200px;
  margin-top: 25px;
  flex-direction: column;
  justify-content: space-between;
}

.toolpage {
  display: flex;
  width: 100%;
  height: 45px;
  background-color: #FFFFFF;
  align-items: center;
}

.tool-icon {
  width: 32px;
  height: 32px;
}


.tool-text {
  font-family: SimSun;
  font-size: 16px;
  line-height: 18px;
  font-weight: 600;
}

.right {
  width: 20px;
  height: 20px;
}

.bottom-image {
  display: flex;
  width: 100%;
  height: auto;
  justify-content: center;
}

.bottom {
  width: 220px;
  height: 220px;
}