page {
  height: 100%;
  background-color: #F5F5F5;
}

.enter-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background-color: #F5F5F5;
}
.info{
  font-weight: 700;
  font-size:14px;
}
.tool{
  display: flex;
  width: 100%;
  height: 80px;
}
.toolarea {
  margin:auto;
  margin-left: 3px;
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 80px;
  justify-content: space-around;
  align-items: flex-start;
  position: sticky;
}
.toolarea1 {
  margin:auto;
  display: flex;
  flex-direction: column;
  width: 18%;
  height: 80px;
  justify-content: space-around;
  align-items: flex-start;
  position: sticky;
}
.btu{
  display: flex;
  height: 30px;
  font-size: 12px;
  font-weight: 500;
  justify-content: center;
  align-items: center;
}
.box-list .box-title-row {
  display: flex;
  justify-content: space-around;
  font-size: 16px;
  line-height: 42px;
  background-color: white;
  font-weight: 600;
  font-family: SimSun;
  position: sticky;
  top: 55px;
}

.box-list .box-data-row {
  display: flex;
  justify-content: space-around;
  font-size: 13px;
  line-height: 42px;
  border-bottom: 1px solid #F2F2F2;
}

.box-list .box-column1 {
  text-align: center;
  flex: 0 0 30%;

}

.box-list .box-column2 {
  text-align: center;
  flex: 0 0 60%;
}




.button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 40px;
  position: fixed;
  bottom: 100px;
  left: 25%;
  background-color: #31C621;
  border-radius: 4px;
}

.code-image {
  width: 20px;
  height: 20px;
}

.code-text {
  font-size: 16px;
  font-weight: 300;
  line-height: 20px;
  font-family: SimSun;
  color: #F5F5F5;
}

.model {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.selfdefshowmodal {
  z-index: 100;
  display: flex;
  background-color: white;
  flex-direction: column;
  justify-content: space-between;
  width: 70vw;
  height: 52vh;
  top: 15vh;
  border-radius: 5vw;
  position: absolute;
  padding: 0px 20px;
}

.butt {
  display: flex;
}

